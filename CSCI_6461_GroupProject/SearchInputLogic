X3=80;

LDA R0,X0,0,31		// R0=31
AIR R0,01	 //R0=32
STR R0,X3,0,9 // STORING [89]=32

LDA R1,X3,0,11 // R1=91
STR R1,X3,0,10 // [90]=91

IN KEY,R0
STR R0,X3,1,10 // STORING INPUT AT 91 ( CURRRENT R1)
LDR R2,X3,0,9		// R2=32
TRR R0,R2		// COMPARING TWO REGISTERS FOR "SPACE"
JCC 3,X0,0,1		// IF SPACE , (JCC=3), GO TO TRAP LOCATION [1] 
AIR R1,0,0,1		// INCREAMENTING R1
JMA 00,X,0,ADDRESS	// JUMP UNCONDITIONALLY TO INSTRUCTION STR R1,X3,10